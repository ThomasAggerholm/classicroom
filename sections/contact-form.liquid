<div class="contact-form__wrapper">

    <div class="contact-form__title">
        <h2 class="h1">{{ section.settings.title }}</h2>
    </div>

    {% form 'contact' %}
        {% if form.posted_successfully? %} {{ section.settings.thanks }} {% endif %}
        {{ form.errors | default_errors }}
        <div class="contact-form__inner">
            <div class="contact-form__names">
                <div class="first-name">
                    <label for="ContactFormName">{{ section.settings.first_name_label }}</label>
                    <input type="text" id="ContactFormName" name="contact[firstName]" placeholder="{{ section.settings.first_name_placeholder }}" onfocus="this.placeholder = ''" onblur="this.placeholder = '{{ section.settings.first_name_placeholder }}'">
                </div>
                <div class="last-name">
                    <label for="ContactFormName">{{ section.settings.last_name_label }}</label>
                    <input type="text" id="ContactFormName" name="contact[lastName]" placeholder="{{ section.settings.last_name_placeholder }}" onfocus="this.placeholder = ''" onblur="this.placeholder = '{{ section.settings.last_name_placeholder }}'">
                </div>
            </div>
            
            <div class="contact-form__info">
                <div class="contact-phone">
                    <label for="ContactFormPhone">{{ section.settings.phone_label }}</label>
                    <input type="tel" id="ContactFormPhone" name="contact[phone]" placeholder="{{ section.settings.phone_placeholder }}" onfocus="this.placeholder = ''" onblur="this.placeholder = '{{ section.settings.phone_placeholder }}'">
                </div>
                <div class="contact-order">
                    <label for="ContactFormPhone">{{ section.settings.order_label }}</label>
                    <input type="number" id="ContactFormPhone" name="contact[orderNum]" placeholder="{{ section.settings.order_placeholder }}" onfocus="this.placeholder = ''" onblur="this.placeholder = '{{ section.settings.order_placeholder }}'">
                </div>
            </div>
            
            <div class="contact-form__message">
                <label for="ContactFormMessage">{{ section.settings.message_label }}</label>
                <textarea rows="10" id="ContactFormMessage" name="contact[body]" placeholder="{{ section.settings.message_placeholder }}" onfocus="this.placeholder = ''" onblur="this.placeholder = '{{ section.settings.message_placeholder }}'"></textarea>
            </div>
        </div>
        
        <div class="contact-form__button">
            <input class="contact__button" type="submit" value="{{ section.settings.button_text }}">
        </div>
        
    {% endform %}
</div>

