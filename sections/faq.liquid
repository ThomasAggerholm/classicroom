<section id="faq" class="section">
    <div class="faq__title__wrapper">
        <h3 class="faq__title h1">{{ section.settings.title }}</h3>
    </div>

    <div class="faq-toggle__wrapper">
        {% for block in section.blocks %}
            <div class="faq-toggle__item">
                <div class="faq-toggle__item__header">
                    <h4 class="faq-toggle__item__header__title">{{ block.settings.faq_question }}</h4>
                    <span class="open-icon">
                        <svg xmlns="http://www.w3.org/2000/svg" width="19" height="19" viewBox="0 0 26 26">
                            <g id="Group_1" data-name="Group 1" transform="translate(-537.5 -407.5)">
                                <line class="open" id="line-1" data-name="Line 1" y2="24" transform="translate(550.5 408.5)" fill="none" stroke="#1d2129" stroke-linecap="round" stroke-width="2"/>
                                <line id="line-2" data-name="Line 2" y2="24" transform="translate(562.5 420.5) rotate(90)" fill="none" stroke="#1d2129" stroke-linecap="round" stroke-width="2"/>
                            </g>
                        </svg>
                    </span>
                </div>

                <div class="faq__answer__wrapper">
                    <p class="faq__answer">
                        {{ block.settings.faq_answer }}
                    </p>
                </div>
            </div>
        {% endfor %}
    </div>
</section>

{% schema %}
{
    "name": "FAQ",
    "settings": [
        {
            "type": "text",
            "id": "title",
            "label": "FAQ titel"
        }
    ],
    "blocks": [
        {
            "type": "faq_toggle",
            "name": "FAQ",
            "settings": [
                {
                    "type": "text",
                    "id": "faq_question",
                    "label": "FAQ spørgsmål"
                },
                {
                    "type": "textarea",
                    "id": "faq_answer",
                    "label": "FAQ svar"
                }
            ]
        }
    ]
}
{% endschema %}